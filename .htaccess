#    <Directory /path/to/ghostbox %>>
#        Options -Indexes +FollowSymLinks
#        AllowOverride FileInfo RewriteEngine RewriteCond RewriteRule
#        Order allow,deny
#        Allow from all
#    </Directory>
#
# Apache2.4
#    <Directory /path/to/ghostbox %>>
